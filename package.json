{
  "name": "email-helper",
  "version": "1.0.0",
  "description": "Intelligent email management system with AI processing",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\" --names \"API,WEB\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "backend": "pwsh -Command \".venv/Scripts/python.exe -m uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000\"",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" --names \"API,WEB\" --prefix-colors \"blue,green\" --restart-tries 3",
    "install-deps": "cd frontend && npm install && echo Frontend dependencies installed!",
    "setup": "npm install && npm run install-deps && echo All dependencies installed!",
    "build": "cd frontend && npm run build",
    "test": "pwsh -File run-all-tests.ps1",
    "test:backend": ".venv/Scripts/python.exe -m pytest backend/tests/ -v",
    "test:src": ".venv/Scripts/python.exe -m pytest test/ -v",
    "test:frontend": "cd frontend && npm run test:run",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:coverage": "pwsh -File run-all-tests.ps1 -Coverage",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format",
    "health": "echo Checking services... && curl -f http://localhost:8000/health && curl -f http://localhost:3000",
    "electron:install": "cd electron && npm install",
    "electron:dev": "cd frontend && npm run build && cd ../electron && npm run dev",
    "electron:build": "cd frontend && npm run build && cd ../electron && npm run build",
    "electron": "npm run electron:dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "email",
    "ai",
    "management",
    "automation",
    "outlook",
    "fastapi",
    "react"
  ],
  "author": "Amelia Payne",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8"
  }
}