# Email Helper Production Environment Configuration
# IMPORTANT: Copy this file to .env.production and update with actual values
# DO NOT commit .env.production to version control

# App Configuration
APP_NAME="Email Helper API"
APP_VERSION="1.0.0"
DEBUG=false
HOST="0.0.0.0"
PORT=8000

# Security Settings - CHANGE THESE IN PRODUCTION
SECRET_KEY="generate-a-secure-random-key-here-change-this"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings - Update with your frontend domains
CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Database Settings - Use managed PostgreSQL in production
DATABASE_URL="postgresql://user:password@postgres-host:5432/email_helper"

# Redis Settings - Use managed Redis in production
REDIS_URL="redis://:password@redis-host:6379"

# Azure OpenAI Settings
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your-production-azure-openai-key"
AZURE_OPENAI_DEPLOYMENT="gpt-4o"
AZURE_OPENAI_API_VERSION="2024-02-01"

# Microsoft Graph API Settings
GRAPH_CLIENT_ID="your-production-client-id"
GRAPH_CLIENT_SECRET="your-production-client-secret"
GRAPH_TENANT_ID="your-production-tenant-id"
GRAPH_REDIRECT_URI="https://yourdomain.com/auth/callback"

# Monitoring and Logging
LOG_LEVEL="INFO"
SENTRY_DSN=""  # Optional: Add Sentry DSN for error tracking
ENABLE_METRICS=true

# Performance Settings
WORKER_COUNT=4
MAX_CONNECTIONS=100
POOL_SIZE=20
POOL_TIMEOUT=30

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Production Security
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Email Notifications (for alerts)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
ALERT_EMAIL="alerts@yourdomain.com"
