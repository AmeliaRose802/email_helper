# Email Helper - Localhost Development Configuration
# Copy this file to .env for localhost development
# This configuration is optimized for local development with COM backend (Outlook)

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME="Email Helper API"
APP_VERSION="1.0.0"

# Enable debug mode for detailed logging (true for development)
DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host (use 0.0.0.0 to allow connections from all interfaces)
HOST=0.0.0.0

# Server port (default: 8000)
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT token generation
# For localhost, this can be a simple value. CHANGE IN PRODUCTION!
SECRET_KEY=localhost-development-secret-key-change-in-production

# JWT algorithm (HS256 is standard)
ALGORITHM=HS256

# Token expiration times (in minutes and days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# AUTHENTICATION & EMAIL PROVIDER
# =============================================================================

# Email provider selection: "com" for localhost (Outlook COM), "graph" for cloud
EMAIL_PROVIDER=com

# Use COM backend for localhost operation (true for development)
USE_COM_BACKEND=true

# Skip authentication for localhost development (set to false for production)
REQUIRE_AUTHENTICATION=false

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database URL - SQLite for development (stored in runtime_data folder)
DATABASE_URL=sqlite:///./runtime_data/email_helper_history.db

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS (frontend URLs)
# For localhost development, allow both frontend dev server and production port
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8081"]

# CORS credentials support
CORS_ALLOW_CREDENTIALS=true

# Allowed HTTP methods
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]

# Allowed headers
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# AZURE OPENAI SETTINGS (Optional - for AI features)
# =============================================================================

# Azure OpenAI endpoint URL
# Example: https://your-resource.openai.azure.com/
AZURE_OPENAI_ENDPOINT=

# Azure OpenAI API key
# Get this from Azure Portal > Your OpenAI Resource > Keys and Endpoint
AZURE_OPENAI_API_KEY=

# Azure OpenAI deployment name (model to use)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# MICROSOFT GRAPH API SETTINGS (Not needed for localhost COM backend)
# =============================================================================

# For localhost development with COM backend, these are NOT required
# Only needed when EMAIL_PROVIDER=graph for cloud deployment

# Azure AD App Client ID
# GRAPH_CLIENT_ID=

# Azure AD App Client Secret
# GRAPH_CLIENT_SECRET=

# Azure AD Tenant ID
# GRAPH_TENANT_ID=

# OAuth redirect URI
# GRAPH_REDIRECT_URI=http://localhost:8000/auth/callback

# =============================================================================
# FRONTEND SETTINGS (for reference - actual frontend uses .env.local)
# =============================================================================

# Frontend should use these settings in frontend/.env.local:
# VITE_LOCALHOST_MODE=true
# VITE_API_BASE_URL=http://localhost:8000
# VITE_SKIP_AUTH=true

# =============================================================================
# LOCALHOST DEVELOPMENT NOTES
# =============================================================================

# Prerequisites:
# 1. Windows 10/11 with Microsoft Outlook installed and configured
# 2. Python 3.9+
# 3. Node.js 18+ (for frontend)

# Quick Start:
# 1. Copy this file to .env
# 2. Install backend dependencies: pip install -r requirements.txt
# 3. Start backend: python run_backend.py
# 4. Start frontend: cd frontend && npm install && npm run dev
# 5. Open browser to http://localhost:3000 or http://localhost:5173

# Security Notes:
# - This configuration is for LOCAL DEVELOPMENT ONLY
# - Authentication is disabled for convenience
# - Uses local Outlook via COM interface (no cloud credentials needed)
# - Do not use these settings in production!
