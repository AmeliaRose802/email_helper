# Docker Compose Environment Variables
# Copy this file to .env and configure with your values

# Database Configuration (PostgreSQL)
POSTGRES_DB=email_helper
POSTGRES_USER=emailhelper
POSTGRES_PASSWORD=changeme_in_production

# Application Configuration
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production-must-be-long-and-random

# JWT Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database URL
# For SQLite (development): sqlite:///./runtime_data/email_helper_history.db
# For PostgreSQL (production): postgresql://emailhelper:changeme@database:5432/email_helper
DATABASE_URL=sqlite:///./runtime_data/email_helper_history.db

# CORS Origins (comma-separated list for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:80", "http://localhost"]

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01

# Microsoft Graph API Configuration
GRAPH_CLIENT_ID=your-azure-ad-app-client-id
GRAPH_CLIENT_SECRET=your-azure-ad-app-client-secret
GRAPH_TENANT_ID=your-azure-ad-tenant-id
GRAPH_REDIRECT_URI=http://localhost:8000/auth/callback

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Frontend API URL (for build-time configuration)
VITE_API_BASE_URL=http://localhost:8000
